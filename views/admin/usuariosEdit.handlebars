<div class="card border-0 bg-transparent">
    <form action="/admin/cadastro/usuario/edit" method="post">
        <div class="card-body">
            <input type="hidden" name="id" value="{{usuario.dataValues.id}}">
            <label>Usu치rio:</label>
                <input value="{{usuario.dataValues.user}}" type="text" name="user" placeholder="Usu치rio/solicitante" class="form-control mb-2">
