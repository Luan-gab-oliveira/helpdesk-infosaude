                <input value="{{usuario.dataValues.email}}" type="text" name="email" placeholder="E-mail do setor" class="form-control mb-2">
            <label>Telefone:</label>
                <input value="{{usuario.dataValues.telefone}}" type="tel" id="telefone" name="telefone" placeholder="Telefone para contato" class="form-control mb-2" onkeyup="handlePhone(event)" maxlength="15">
            <label>Senha:</label>
            <input value="" type="text" name="password" placeholder="Defina uma senha" class="form-control mb-2">
            <label for="tpaAcesso">Tipo de acesso:</label>
            <input type="hidden" id="tpAcesso" value="{{usuario.dataValues.acesso}}">
            <select class="form-select mb-2" name="acesso" id="acesso">
                <option value="" disabled selected hidden>Selecione o tipo de acesso</option>
                <option value="0" selected>Solicitante</option>
                <option value="1">Administrador</option>
            </select>
            <label >Categoria:</label>
            <select class="form-select" name="categoria" id="categoria">
                <option value="" selected>Categoria de Administrador</option>
                <option value="1" selected>Inform치tica</option>
                <option value="2">Sistema</option>
            </select>
        </div>
        <div class="card-footer mt-2 border-0 bg-transparent">
            <button type="submit" class="btn text-white" style="background-color: #4784ba;">Salvar</button>
            <a href="/admin/cadastro/usuario"><button type="button" class="btn text-white" style="background-color: #C23F5C;">Cancelar</button></a>
        </div>
    </form>
</div>
