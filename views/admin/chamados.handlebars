<script src="/js/validarCampos.js"></script>

<div class="web" class="container p-0">
  <div class="row align-bottom">
    <div class="col-8 align-self-end">
      <h3 class="m-0">Tickets abertos</h3>
    </div>
    <div class="col text-end">
      <button type="button" class="btn btn-sm text-white mt-4" data-bs-toggle="modal" data-bs-target="#staticBackdrop" style="background-color: #4784ba;">Novo chamado</button>
    </div>
  </div>
</div>

<div class="mobile">
  <h3 class="m-0">Chamados em aberto</h3>
  <button type="button" class="btn btn-sm text-white mt-4" data-bs-toggle="modal" data-bs-target="#staticBackdrop" style="background-color: #4784ba;">Novo chamado</button>
</div>
<hr>

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 row-cols-xl-6 g-4 mt-4">
  {{#each listchamados}}
    <div class="col">
      <div class="card shadow-sm" style="height: 20rem;">
        <div class="card-body text-truncate">
          <div class="row p-0 m-0 mb-3 align-items-center">
            <div class="col p-0 m-0">
              <h5 class="card-title m-0 fs-6">Chamado: {{dataValues.id}}</h5>
            </div>
            <div class="col p-0 m-0 text-end">
              {{!-- Display: none --}}
              <button type="button"  class="btn p-0" ><span class="badge rounded-pill badge-notification bg-danger">1</span><i class="fas fa-bell"></i></button>
            </div>
          </div>
          {{#if inOpen}}
            <div class="mb-2 p-2 rounded align-items-center" style="background-color: #eef0f3;">
              <h6 class="fs-6 m-0 text-uppercase"><i class="fa-solid fa-circle-exclamation" style="margin-right: 10px;"></i>{{dataValues.status}}</h6>
            </div>
          {{else if inProcess}}
            <div class="mb-2 p-2 rounded align-items-center" style="background-color: #eef0f3;">
              <h6 class="fs-6 m-0 text-uppercase"><i class="fa-solid fa-spinner" style="margin-right: 10px;"></i>{{dataValues.status}}</h6>
            </div>
          {{else if transfer}}
            <div class="mb-2 p-2 rounded align-items-center" style="background-color: #eef0f3;">
              <h6 class="fs-6 m-0 text-uppercase"><i class="fa-solid fa-share-from-square" style="margin-right: 10px;"></i>{{dataValues.status}}</h6>
            </div>
          {{else closed}}
            <div class="mb-2" style="height: 0.3rem; background-color: #32A071;"></div>
          {{/if}}

          <div class="row m-0 p-0">
            <div class="col m-0 p-0">
              <span class="mt-2 fs-7" style="color: #646E78;">Unidade</span>
              <h6 class="fs-7">{{user.dataValues.user}}</h6>
            </div>
            <div class="col m-0 p-0">
              <span class="mt-2 fs-7" style="color: #646E78;">Solicitante</span>
              <h6 class="fs-7">{{dataValues.nome}}</h6>
            </div>
          </div>
          <span class="mt-2 fs-7" style="color: #646E78;">Ocorrência</span>
          <h6 class="fs-7">{{dataValues.ocorrencia}}</h6>
          {{!-- <span class="mt-2 fs-7" style="color: #646E78;">Status</span>
          <h6 class="text-truncate fs-7 mb-2">{{dataValues.status}}</h6> --}}

          <span class="mt-2 fs-7" style="color: #646E78;">Data de abertura:</span>
          <h6 class="fs-7 mb-4">{{dataAbertura}}</h6>
        </div>
        <div class="card-footer p-0">
          <div class="container">
              <div class="row">
                <div class="col p-0">
                  <form action="" method="post">
                    <input type="hidden" name="id" value="{{dataValues.id}}">
                    <a href="/admin/chamado/atendimento/{{dataValues.id}}"><button type="button" class="btn btn-light btn-md form-control" style="border-radius: 0 0 0 0.25rem;">Visualizar</button></a>
                  </form>
                </div>
                <div class="col p-0">
                  <form action="/admin/chamado/atendimento/encerrar" method="post">
                    <input type="hidden" name="id" value="{{dataValues.id}}">
                    <button type="submit" class="btn btn-light btn-md form-control" style="border-radius: 0 0 0.25rem 0;">Encerrar</button>
                  </form>
                </div>
              </div>
            </div>
        </div>
      </div>
    </div>
  {{/each}}
</div>

<div class="modal fade modal-centerd" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="staticBackdropLabel" style="color: #236192;">Novo chamado</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form action="/admin/chamados" method="post">
          <div class="container p-0">
            <label for="user_id">Unidade: </label>
              <select class="form-select mb-2" name="user_id" id="user_id" required onchange="">
                  <option value="0" disabled selected>Selecione uma unidade</option>
                  {{#each usuarios}}
                  <option value={{dataValues.id}}>{{dataValues.user}}</option>
                  {{/each}}
              </select>
            <div class="row p-0">
              <div class="col">
                <label for="ocorrencia">Ocorrência: </label>
                  <select class="form-select mb-2" aria-label="Default select example" name="ocorrencia" id="ocrr" required onchange="mostrarSelect(this);">
                      <option value="0" disabled selected>Tipo de ocorrência</option>
                      <option value="computador">Computador</option>
                      <option value="impressora">Impressora</option>
                      <option value="rede de internet">Rede de internet</option>
                      <option value="sistema">Sistema</option>
                      <option value="outros">Outros</option>
                  </select>
              </div>
              <div class="col" id="selectEqp" style="display: none;">
                <label>Selb</label>
                  <select class="form-select mb-2" name="eqp_id" required>
                      <option value="0" selected>Selecione o Selb</option>
                      {{#each equipamentos}}
                      <option value={{dataValues.id}}>{{dataValues.patrimonio}}</option>
                      {{/each}}
                  </select>
              </div>
            </div>
          </div>
          <label for="local">Local: </label>
            <input type="text" name="local" placeholder="Local/Sala/Consultório" class="form-control mb-2" required>
          <label for="nome">Solicitante: </label>
            <input type="text" name="nome" placeholder="Nome do solicitante" class="form-control mb-2" required>
          <label for="telefone">Telefone: </label>
            <input type="tel" name="telefone" placeholder="Telefone para contato" class="form-control mb-2" onkeyup="handlePhone(event)" maxlength="15">
          <label for="descricao">Descrição: </label>
            <textarea name="descricao" class="form-control" placeholder="Descrição do chamado" id="floatingTextarea" style="height: 7rem; resize: none;" required></textarea>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn text-white" style="background-color: #4784ba;">Enviar</button>
          <a href="/admin/chamados" ><button type="button" class="btn text-white" style="background-color: #C23F5C;">Cancelar</button></a>
        </div>
      </form>
    </div>
  </div>
</div>

