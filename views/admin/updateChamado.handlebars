<div class="container p-0 mt-2">
    <div class="row">
        <div class="col">
            <h2>Chamado: {{chamado.dataValues.id}}</h2>
        </div>
        <div class="col text-end">
            <button class="btn text-white" type="button" id="button-addon2" style="background-color: #4784ba;"><i class="fa-solid fa-share-from-square"></i> Trânsferir</button>
            <button class="btn text-white" type="button" data-bs-toggle="modal" data-bs-target="#materiasModal" style="background-color: #4784ba;"><i class="fa-solid fa-screwdriver-wrench"></i> Materiais</button>
            <button class="btn text-white" type="button" data-bs-toggle="modal" data-bs-target="#staticBackdrop" style="background-color: #4784ba;"><i class="fa-solid fa-comment"></i> Observações</button>
        </div>
    </div>
</div>
<hr>

<div class="card border-0 bg-transparent mt-4">
    <div class="card'-body">
        <h4>Status: {{chamado.dataValues.status}}</h4>
        <div class="container p-0">
            <div class="row">
                <div class="col">
                    <label class="mt-2">Unidade:</label>
                        <input type="text" name="ocorrencia" id="ocorrencia" placeholder="ocorrência/chamado" class="form-control mb-2" value="{{chamado.user.dataValues.user}}">
                </div>
                <div class="col">
                    <label class="mt-2">Email:</label>
                        <input type="text" name="ocorrencia" id="ocorrencia" placeholder="ocorrência/chamado" class="form-control mb-2" value="{{chamado.user.dataValues.email}}">
                </div>
            </div>
        </div>
        <label class="mt-2">Local:</label>
            <input type="text" name="ocorrencia" id="ocorrencia" placeholder="ocorrência/chamado" class="form-control mb-2" value="{{chamado.dataValues.local}}">
        <label class="mt-2">Ocorrência:</label>
            <input type="text" name="ocorrencia" id="ocorrencia" placeholder="ocorrência/chamado" class="form-control mb-2" value="{{chamado.dataValues.ocorrencia}}">
        <label for="dsc">Descrição: </label>
            <textarea class="form-control" placeholder="Descrição do chamado" id="floatingTextarea" style="height: 7rem; resize: none;">{{chamado.dataValues.descricao}}</textarea>
        <hr>
        <h4 class="mb-4"><label>Classificação final</label></h4>
        <form action="/admin/chamado/update" method="post">
            <input type="hidden" name="id" value="{{chamado.dataValues.id}}">
            <div class="container text-center">
                <div class="row mb-4">
                    <select class="form-select col" aria-label="Default select example" name="status">
                        <option value=""disabled selected>Situação</option>
                        <option value="pendente">Aberto</option>
                        <option value="processando">Processando</option>
                        <option value="encerrado">Finalizado</option>
                    </select>
                    <button type="submit" class="btn text-white col-xl-2" style="margin-left: 1rem; background-color: #4784ba;">Salvar</button>
                </div>
            </div>
        </form>
    </div>
</div>

{{!-- Model Observações --}}
<div class="modal fade modal-centerd" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="staticBackdropLabel" style="color: #236192;">Observações</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="/admin/chamado/atendimento/observacao" method="post">
                <div class="modal-body bg-0">
                    <div class="overflow-auto p-3 bg-0" style="max-height: 22rem; height: 22rem;">
                        {{#each obs}}
                            <div class="bg-light p-2 mb-4 rounded">
                                <h6>{{dataValues.user}}</h6>    
                                <p>{{dataValues.obs}}</p>
                            </div>
                        {{/each}}
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="hidden" name="chamado_id" value="{{chamado.dataValues.id}}">
                    <div class="container">
                        <div class="row align-items-center">
                            <div class="col">
                                <textarea class="form-control" name="obs" required placeholder="Mensagem" style="height: 3.5rem; resize: none"></textarea>
                            </div>
                            <div class="col-1">
                                <button type="submit" class="btn text-white rounded-circle" style="background-color: #4784ba;"><i class="fa-solid fa-paper-plane"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

{{!-- MOdal Materiais --}}
<div class="modal fade modal-centerd" id="materiasModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="staticBackdropLabel" style="color: #236192;">Materiais Utilizados</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body bg-0">
                <form action="/admin/chamado/atendimento/material" method="post">
                    <input type="hidden" name="chamado_id" value="{{chamado.dataValues.id}}">
                    <select class="form-select mb-2" aria-label="Default select example" name="item_id">
                        <option selected>Selecione um material</option>
                        {{#each materiais}}
                            <option value={{dataValues.id}}>{{dataValues.item}}</option>
                        {{/each}}
                    </select>
                    <div class="container p-0">
                        <div class="row">
                            <div class="col">
                                <input class="form-control" type="number" name="quantidade" placeholder="Quantidade">
                            </div>
                            <div class="col-3 text-end">
                                <button type="submit" class="btn text-white" style="background-color: #4784ba;">Adicionar</button>
                            </div>
                        </div>
                    </div>
                </form>
                <hr>
                <div class="overflow-auto p-3 bg-0" style="max-height: 22rem; height: 22rem;">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Código</th>
                                <th scope="col">Item</th>
                                <th scope="col" class="text-center">quantidade</th>
                                <th scope="col" class="text-center">Ação</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each saidaMateriais}}
                                <tr class="align-middle">
                                    <td>{{dataValues.id}}</td>
                                    <td>{{item.dataValues.item}}</td>
                                    <td class="text-center">{{dataValues.quantidade}}</td>
                                    <td class="text-center">
                                        <form action="/admin/chamado/atendimento/material/delete" method="post">
                                            <input type="hidden" name="chamado_id" value="{{dataValues.chamado_id}}">
                                            <input type="hidden" name="item_id" value="{{dataValues.item_id}}">
                                            <button type="submit" class="btn btn-danger" style="background-color: #C23F5C;"><i class="fa-solid fa-trash-can"></i></button>
                                        </form>
                                    </td>
                                </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>